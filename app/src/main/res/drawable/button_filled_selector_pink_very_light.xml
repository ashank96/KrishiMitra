<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<shape>
			<solid android:color="@color/pink_very_light" />
			<corners android:radius="@dimen/corner_radius_button_small" />
			<stroke
				android:width="0.5dp"
				android:color="@color/pink_light" />
		</shape>
	</item>
	<item android:state_focused="true">
		<shape>
			<solid android:color="@color/pink_very_light" />
			<corners android:radius="@dimen/corner_radius_button_small" />
			<stroke
				android:width="0.5dp"
				android:color="@color/pink_light" />
		</shape>
	</item>
	<item android:state_enabled="false">
		<shape>
			<solid android:color="@color/pink_very_light" />
			<corners android:radius="@dimen/corner_radius_button_small" />
			<stroke
				android:width="0.5dp"
				android:color="@color/pink_very_light" />
		</shape>
	</item>
	<item>
		<shape>
			<solid android:color="@color/white" />
			<corners android:radius="@dimen/corner_radius_button_small" />
			<stroke
				android:width="0.5dp"
				android:color="@color/pink_light" />
		</shape>
	</item>
</selector>