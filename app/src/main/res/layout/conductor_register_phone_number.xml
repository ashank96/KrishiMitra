<?xml version="1.0" encoding="utf-8"?>
<layout>

	<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<androidx.appcompat.widget.AppCompatTextView
			android:id="@+id/newUserHeader"
			style="@style/Text.FB.Heading1.Theme"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/spacing_normal"
			android:layout_marginTop="@dimen/spacing_large"
			android:text="New User?"
			android:visibility="visible"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" />

		<androidx.appcompat.widget.AppCompatEditText
			android:id="@+id/phoneNumberEditText"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/spacing_normal"
			android:layout_marginTop="@dimen/spacing_large"
			android:layout_marginRight="@dimen/spacing_normal"
			android:hint="Enter your phone number"
			android:inputType="number"
			android:maxLength="10"
			android:maxLines="1"
			android:visibility="visible"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/newUserHeader" />

		<include
			android:id="@+id/otpViewEditText"
			layout="@layout/view_otp_edit_text"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/spacing_extra_large"
			android:layout_marginTop="@dimen/spacing_extra_large"
			android:layout_marginRight="@dimen/spacing_extra_large"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="parent"
			app:layout_constraintTop_toTopOf="parent" />
		<ProgressBar
			android:layout_width="wrap_content"
			android:id="@+id/loadingView"
			android:visibility="gone"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/spacing_extra_large"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			/>

		<androidx.appcompat.widget.AppCompatButton
			android:id="@+id/proceedButton"
			style="@style/Button.FB.Filled"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="@dimen/spacing_normal"
			android:layout_marginRight="@dimen/spacing_normal"
			android:layout_marginBottom="@dimen/spacing_large"
			android:enabled="false"
			android:text="Next"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent" />
	</androidx.constraintlayout.widget.ConstraintLayout>
</layout>